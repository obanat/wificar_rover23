    <LinearLayout android:orientation="vertical" android:id="@+id/okbutton" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_below="@+id/wholeTextLinearlayout" android:layout_centerHorizontal="true" android:layout_centerVertical="true">
