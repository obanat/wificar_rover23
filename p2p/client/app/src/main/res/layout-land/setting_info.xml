<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/setting_background" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:id="@+id/setting_image" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="28dp">
        <ImageView android:id="@+id/image" android:background="@drawable/info_brookstone" android:layout_width="210dp" android:layout_height="30dp" android:layout_centerHorizontal="true"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/wholeTextLinearlayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_below="@+id/setting_image">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="false" android:layout_centerVertical="true">
            <LinearLayout android:id="@+id/setting_IP" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="0dp" android:layout_marginTop="0dp" android:layout_below="@+id/setting_image" android:layout_alignParentLeft="true">
                <TextView android:textSize="16dp" android:textColor="#ffffffff" android:id="@+id/textView_IP" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/setting_category_host_label" android:layout_alignParentLeft="true"/>
                <EditText android:textSize="16dp" android:textColor="#ff000000" android:textColorHint="#ffaaaaaa" android:gravity="center" android:id="@+id/EditText_IP" android:background="@drawable/edit_color" android:clickable="false" android:longClickable="false" android:layout_width="140dp" android:layout_height="30dp" android:layout_marginLeft="40dp" android:text="192.168.1.100" android:cursorVisible="false" android:selectAllOnFocus="false" android:editable="false"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/setting_POST" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="0dp" android:layout_marginTop="5dp" android:layout_below="@+id/setting_IP" android:layout_alignParentLeft="true">
                <TextView android:textSize="16dp" android:textColor="#ffffffff" android:id="@+id/textView_PORT" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/setting_category_port_label" android:layout_alignParentLeft="true"/>
                <EditText android:textSize="16dp" android:textColor="#ff000000" android:gravity="center" android:id="@+id/EditText_PORT" android:background="@drawable/edit_color" android:clickable="false" android:longClickable="false" android:layout_width="55dp" android:layout_height="30dp" android:layout_marginLeft="24dp" android:text="80" android:cursorVisible="false" android:selectAllOnFocus="false" android:editable="false"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/setting_D" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="0dp" android:layout_marginTop="10dp" android:layout_below="@+id/setting_POST" android:layout_alignParentLeft="true">
                <TextView android:textSize="16dp" android:textColor="#ffffffff" android:id="@+id/textView_Device" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/information_category_device_ssid_label" android:layout_alignParentLeft="true"/>
                <TextView android:textSize="16dp" android:textColor="#ffffffff" android:id="@+id/TextView_D" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="17dp" android:text="Rover_XXXXXXXXXXXX"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/setting_F" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="0dp" android:layout_marginTop="10dp" android:layout_below="@+id/setting_D" android:layout_alignParentLeft="true">
                <TextView android:textSize="16dp" android:textColor="#ffffffff" android:id="@+id/textView_Firmware" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/information_category_firmware_label" android:layout_alignParentLeft="true"/>
                <TextView android:textSize="16dp" android:textColor="#ffffffff" android:id="@+id/TextView_F" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="X.X.X.X"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/setting_S" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="0dp" android:layout_marginTop="10dp" android:layout_below="@+id/setting_F" android:layout_alignParentLeft="true">
                <TextView android:textSize="16dp" android:textColor="#ffffffff" android:id="@+id/textView_Software" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/information_category_version_label" android:layout_alignParentLeft="true"/>
                <TextView android:textSize="16dp" android:textColor="#ffffffff" android:id="@+id/TextView_S" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="26dp" android:text="XX"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/slinear_setting" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginRight="0dp" android:layout_toRightOf="@+id/wholeTextLinearlayout" android:layout_alignParentRight="true" android:layout_centerVertical="true">
            <Button android:id="@+id/button" android:background="@drawable/setting_icon" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="#ffffffff" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rover 2.0"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/okbutton" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/wholeTextLinearlayout" android:layout_centerHorizontal="true" android:layout_centerVertical="true">
        <Button android:textSize="15sp" android:textColor="#ff000000" android:layout_gravity="center_horizontal" android:id="@+id/OkButton" android:background="@drawable/ok" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
