<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="15dp" android:textColor="#ffffffff" android:id="@+id/current_time_text" android:paddingLeft="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="0:00" android:layout_weight="1"/>
        <TextView android:textSize="15dp" android:textColor="#ffffffff" android:gravity="right" android:id="@+id/duration_text" android:paddingRight="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="0:00" android:layout_weight="1"/>
    </LinearLayout>
    <SeekBar android:id="@+id/seek_bar" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxHeight="4dp" android:minHeight="4dp" android:thumb="@drawable/ic_seekbar_thumb"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_horizontal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2">
            <ImageButton android:id="@+id/previous" android:background="@drawable/ic_backward" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginRight="50dp"/>
            <ImageButton android:id="@+id/play" android:background="@drawable/ic_pause" android:layout_width="50dp" android:layout_height="50dp"/>
            <ImageButton android:id="@+id/next" android:background="@drawable/ic_forward" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginLeft="50dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
