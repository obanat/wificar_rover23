<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <SurfaceView android:layout_gravity="center" android:id="@+id/window" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="42dp" android:textColor="#ffffffff" android:gravity="center" android:id="@+id/player_overlay_info" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="2"/>
        <View android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/player_overlay_decor" android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <View android:id="@+id/player_overlay_spacer" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    </LinearLayout>
</FrameLayout>
